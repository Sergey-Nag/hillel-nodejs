<% include('utils/variables-safe') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partial/head') %>
    <title>Admin</title>
</head>
<body>
    <%- include('partial/header', { page: 'admin' }) %>
    
    <div class="container">
        <%- 
            include('partial/tabs', { tabs: [
                {
                    name: 'Users',
                    url: '/admin',
                    active: true
                },
                {
                    name: 'Rate limits',
                    url: '/admin/rate-limits'
                }
            ]}) 
        %>
        <div>
            <h1>Create user</h1>
            <form method="POST" action="admin/create-user">
                <div>
                    <label for="name">Name *</label>
                    <input type="text" id="name" name="name" required value="<%- values.name ?? '' %>">
                </div>
                <div>
                    <label for="surname">Surname</label>
                    <input type="text" id="surname" name="surname" value="<%- values.surname ?? '' %>">
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required value="<%- values.email ?? '' %>">
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required value="<%- values.password ?? '' %>">
                </div>
                <div>
                    <label for="role">Role</label>
                    <select name="role" id="role">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <input type="hidden" name="__csrfToken" value="<%= csrfToken %>">
                <button type="submit">Create</button>
            </form>
            <% if (error) { %>
                <p class="error-message"><%= error %></p>
            <% } else if (success) { %>
                <p class="success-message"><%= success %></p>
            <% } %>
        </div>
        <hr>
        <div>
            <h1>All users</h1>
            <table id="users">
                <thead>
                    <tr>
                        <th width="130">Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th class="right">Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% if (!users || users.length === 0) { %>
                        <tr>
                            <td class="center" colspan="4">No users</td>
                        </tr>
                    <% } %>
                    <% for (const user of users) { %>
                        <tr>
                            <td>
                                <%= user.id %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.surname %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.role %>
                            </td>
                            <td class="right">
                                <%= new Date(user.create_time).toLocaleString() %>
                            </td>
                            <td>
                                <% if (user.role !== 'Admin') {%>
                                    <a href="/admin/delete-user/<%= user.id %>" class="delete">Delete</a>
                                <% }%>
                            </td>
                        </tr>
                    <% } %>
            </table>
        </div>
    </div>
</body>
</html>